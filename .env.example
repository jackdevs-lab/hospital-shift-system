# ============================================
# HOSPITAL SHIFT SYSTEM - ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_shifts
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRY=7d

# Email (SMTP for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@hospitalshift.com
EMAIL_FROM_NAME="Hospital Shift System"

# QR Code Configuration
QR_CODE_SECRET=qr_system_secret_key
QR_CODE_EXPIRY_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Client Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_APP_NAME="Hospital Shift System"
VITE_PWA_ENABLED=true
VITE_WEBSOCKET_URL=ws://localhost:3000

# Audit Log Retention (days)
AUDIT_LOG_RETENTION_DAYS=365*7  # 7 years

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000