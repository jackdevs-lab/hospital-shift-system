{
"name": "hospital-shift-server",
"version": "1.0.0",
"description": "Backend API for Hospital Shift Planning System",
"main": "src/server.js",
"scripts": {
"start": "node src/server.js",
"dev": "nodemon src/server.js",
"test": "jest --coverage",
"test:unit": "jest --testPathPattern=unit",
"test:integration": "jest --testPathPattern=integration",
"test:e2e": "jest --testPathPattern=e2e",
"lint": "eslint . --ext js",
"format": "prettier --write \"src/**/*.js\"",
"db:migrate": "node scripts/migrate.js",
"db:seed": "node scripts/seed.js",
"db:reset": "npm run db:migrate && npm run db:seed",
"generate:docs": "swagger-jsdoc -d swaggerDef.js -o docs/swagger.json"
},
"dependencies": {
"express": "^4.18.2",
"cors": "^2.8.5",
"helmet": "^7.1.0",
"compression": "^1.7.4",
"dotenv": "^16.3.1",
"pg": "^8.11.3",
"sequelize": "^6.35.2",
"redis": "^4.6.12",
"jsonwebtoken": "^9.0.2",
"bcryptjs": "^2.4.3",
"validator": "^13.11.0",
"winston": "^3.11.0",
"morgan": "^1.10.0",
"express-rate-limit": "^7.1.5",
"express-validator": "^7.0.1",
"socket.io": "^4.7.2",
"nodemailer": "^6.9.7",
"node-cron": "^3.0.3",
"multer": "^1.4.5-lts.1",
"uuid": "^9.0.1",
"qrcode": "^1.5.3",
"exceljs": "^4.4.0",
"pdfkit": "^0.14.0",
"dayjs": "^1.11.10",
"joi": "^17.11.0",
"http-status-codes": "^2.3.0"
},
"devDependencies": {
"nodemon": "^3.0.2",
"jest": "^29.7.0",
"supertest": "^6.3.3",
"eslint": "^8.56.0",
"prettier": "^3.2.5",
"sequelize-cli": "^6.6.2",
"@faker-js/faker": "^8.4.0",
"swagger-jsdoc": "^6.2.8",
"swagger-ui-express": "^5.0.0"
},
"engines": {
"node": ">=18.0.0",
"npm": ">=9.0.0"
}
}